  background: url('https://game.flyh5.cn/resources/game/wechat/tzj/img/gugong20190719/popup_bj.png') no-repeat;
  background-size: 100% 100% !important;
}
.exchange_bj .title{
  display: inline-block;
  width: 460rpx;
  height: 122rpx;
