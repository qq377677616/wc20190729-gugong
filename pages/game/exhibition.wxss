.bang .fonts{
  padding: 30rpx;
  padding-left: 40rpx;
  font-size: 30rpx;
  color: #674a2d;
  line-height: 180%;
  position: relative;

}
.bang .fonts .co{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: -16rpx;
  right: -16rpx;
}
.bang.on{
  top: -2000rpx;
  transition: 2s;
}
.show{
  position: absolute;
  width: 39rpx;
  height: 72rpx;
  right: 45rpx;
  top: calc(50% - 30rpx);
}
.ons{animation:2s ease-out backwards;animation:bounceInDown 2s;}

.btn{
  position: absolute;
  left: calc(50% - 119rpx);
